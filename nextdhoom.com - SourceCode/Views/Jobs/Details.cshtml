@model WebApplication13.Models.joblistn

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Members.cshtml";
}

<h2>Job Details</h2>
<div id="fb-root"></div>
<script>(function(d, s, id) {
