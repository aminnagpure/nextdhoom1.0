@model WebApplication13.Models.LoginView

@{
    ViewBag.Title = "Login";
    if (ViewBag.designation!=null)
    {
    ViewBag.Title =  ViewBag.designation + " For Location " + ViewBag.location;
        }
}

<h2>Login</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        @if (ViewBag.desc!=null)
        {
        <table width="100%">
            <tr>

                <td>
                 Login and Apply Job posted By @ViewBag.fname <br />                    
                    <img src="@ViewBag.gimg" /> 
                </td>
                <tr>
                <td>
                   For the Post of @ViewBag.designation <br />
                   For job location @ViewBag.location
                    
                </td></tr>
            
            <tr>
                <td><span style="white-space: pre-line">
    @ViewBag.desc
                    </span>
</td>
            </tr>

        </table>
        }
        <hr />
        @Html.ValidationSummary(true)

        

        <div class="form-group">
            @Html.LabelFor(model => model.email, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.email)
                @Html.ValidationMessageFor(model => model.email)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Passw, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Passw)
                @Html.ValidationMessageFor(model => model.Passw)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Login for Chat and Video Calls" class="btn btn-default" />
            </div>
            Default Password is <font color="red">1234</font> <br />
            and your email is the username
        </div>


    </div>



    
}

