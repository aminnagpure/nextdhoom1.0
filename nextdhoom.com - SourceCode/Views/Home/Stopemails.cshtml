
@model WebApplication13.Models.membersview.Invite

@{
    ViewBag.Title = "Stopemails";
}

<h3>Sorry To Bother, Just Put Your Email and Click Stop Email,You wont receive any further emails</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true)



        <div class="form-group">
            @Html.LabelFor(model => model.email)
            <div>
                @Html.TextBoxFor(model => model.email, new { style = "width:300px;" })
                @Html.ValidationMessageFor(model => model.email)
            </div>
        </div>
        

        @{
            <h2>@ViewBag.ermessage</h2>


        }


        <div class="form-group">
            <div>
                <input type="submit" value="Stop Emails" class="btn btn-default" />
            </div>
        </div>
        <div class="form-group">



        </div>
    </div>
}



