</head>

<script type="text/javascript">

    $(function () {

        setScreen(false);

        // Declare a proxy to reference the hub.
        var chatHub = $.connection.chatHub;

        registerClientMethods(chatHub);

        // Start Hub
        $.connection.hub.start().done(function () {

            registerEvents(chatHub)

        });

    });

    function setScreen(isLogin) {

        if (!isLogin) {

            //$("#divChat").hide();
            //$("#divLogin").show();
            $("#divChat").show();
            $("#divLogin").hide()


        }
        else {

            $("#divChat").show();
            $("#divLogin").hide();
        }

    }

    function registerEvents(chatHub) {

        var name = $("#txtNickName").val();


        if (name.length > 0) {
            chatHub.server.connect(name, profileid.value, gimage.value);
        }

        $("#btnStartChat").click(function () {

            var name = $("#txtNickName").val();
            if (name.length > 0) {
                chatHub.server.connect(name, memsid);
            }
            else {
                alert("Please enter name");
            }

        });


        $('#btnSendMsg').click(function () {

            var msg = $("#txtMessage").val();
            if (msg.length > 0) {

                var userName = $('#hdUserName').val();
                chatHub.server.sendMessageToAll(userName, msg, profileid.value, gimage.value);
                $("#txtMessage").val('');
            }
        });


        $("#txtNickName").keypress(function (e) {
            if (e.which == 13) {
                $("#btnStartChat").click();
            }
        });

        $("#txtMessage").keypress(function (e) {
            if (e.which == 13) {
                $('#btnSendMsg').click();
            }
        });


    }

    function registerClientMethods(chatHub) {

        // Calls when user successfully logged in
        chatHub.client.onConnected = function (id, userName, allUsers, messages) {
            //alert("on connected");
            setScreen(true);

            $('#hdId').val(id);
            $('#hdUserName').val(userName);
            $('#spanUser').html(userName);

            // Add All Users
            for (i = 0; i < allUsers.length; i++) {

                AddUser(chatHub, allUsers[i].ConnectionId, allUsers[i].UserName, allUsers[i].memsid, allUsers[i].gimg);
            }

            // Add Existing Messages
            for (i = 0; i < messages.length; i++) {

                AddMessage(messages[i].UserName, messages[i].Message, messages[i].memsid, messages[i].gimg);
            }


        }

        // On New User Connected
        chatHub.client.onNewUserConnected = function (id, name, profid, gimg) {
            //alert("on newuserconnected");

            AddUser(chatHub, id, name, profid, gimg);
        }


        // On User Disconnected
        chatHub.client.onUserDisconnected = function (id, userName) {

            $('#' + id).remove();

            var ctrId = 'private_' + id;
            $('#' + ctrId).remove();


            var disc = $('<div class="disconnect">"' + userName + '" logged off.</div>');

            $(disc).hide();
            $('#divusers').prepend(disc);
            $(disc).fadeIn(200).delay(2000).fadeOut(200);

        }

        chatHub.client.messageReceived = function (userName, message, profileid, gimage) {

            AddMessage(userName, message, profileid, gimage);
        }


        chatHub.client.sendPrivateMessage = function (windowId, fromUserName, message, profileid, gimg) {

            var ctrId = 'private_' + windowId;


            if ($('#' + ctrId).length == 0) {

                createPrivateChatWindow(chatHub, windowId, ctrId, fromUserName);

            }

            $('#' + ctrId).find('#divMessage').append('<div class="message"><span class="userName"><a href=../members/viewprofile/' + profileid + ' target=_blank><img src=' + gimg + '></a>' + fromUserName + '</span>: ' + message + '</div>');

            // set scrollbar
            var height = $('#' + ctrId).find('#divMessage')[0].scrollHeight;
            $('#' + ctrId).find('#divMessage').scrollTop(height);

        }

    }

    function AddUser(chatHub, id, name, pid, gim) {

        var userId = $('#hdId').val();

        var code = "";

        if (userId == id) {

            code = $('<div class="loginUser"><img src=' + gim + ">" + name + "</div>");

        }
        else {

            code = $('<a id="' + id + '"title=' + pid + ' imd=' + gim + ' class="user"><img src=' + gim + " id=imgname>" + name + '<a>');

            $(code).click(function () {

                var id = $(this).attr('id');
                var pid = $(this).attr('title');
                var imgsrc = $(this).attr('imd');
                //alert(imgsrc);


                if (userId != id)
                    OpenPrivateChatWindow(chatHub, id, name, pid, imgsrc);

            });
        }

        $("#divusers").append(code);

    }

    function AddMessage(userName, message, profileid, gimage) {
        //alert(profileid);
        $('#divChatWindow').append('<div class="message"><span class="userName"><a href=../members/viewprofile/' + profileid + ' target=_blank><img src=' + gimage + '></a>' + userName + '</span>: ' + message + '</div>');

        var height = $('#divChatWindow')[0].scrollHeight;
        $('#divChatWindow').scrollTop(height);
    }

    function OpenPrivateChatWindow(chatHub, id, userName, pid, img) {

        var ctrId = 'private_' + id;

        if ($('#' + ctrId).length > 0) return;

        createPrivateChatWindow(chatHub, id, ctrId, userName, pid, img);

    }

    function createPrivateChatWindow(chatHub, userId, ctrId, userName, pid, img) {

        var div = '<div id="' + ctrId + '" class="ui-widget-content draggable" rel="0">' +
                   '<div class="header">' +
                      '<div  style="float:right;">' +
                          '<img id="imgDelete"  style="cursor:pointer;" src="/Images/delete.png"/>' +
                       '</div>' +

                       '<span class="selText" rel="0"><img src=' + img + ' ><a href=../members/viewprofile/' + pid + ' target=_blank title="Click To View Profile">' + userName + '</a></span>' +
                   '</div>' +
                   '<div id="divMessage" class="messageArea">' +

                   '</div>' +
                   '<div class="buttonBar">' +
                      '<input id="txtPrivateMessage" class="msgText" type="text"   />' +
                      '<input id="btnSendMessage" class="submitButton button" type="button" value="Send"   />' +
                   '</div>' +
                '</div>';

        var $div = $(div);

        // DELETE BUTTON IMAGE
        $div.find('#imgDelete').click(function () {
            $('#' + ctrId).remove();
        });

        // Send Button event
        $div.find("#btnSendMessage").click(function () {

            $textBox = $div.find("#txtPrivateMessage");
            var msg = $textBox.val();
            if (msg.length > 0) {

                chatHub.server.sendPrivateMessage(userId, msg, profileid.value, gimage.value);
                $textBox.val('');
            }
        });

        // Text Box event
        $div.find("#txtPrivateMessage").keypress(function (e) {
            if (e.which == 13) {
                $div.find("#btnSendMessage").click();
            }
        });

        AddDivToContainer($div);

    }

    function AddDivToContainer($div) {
        $('#divContainer').prepend($div);

        $div.draggable({

            handle: ".header",
            stop: function () {

            }
        });

        ////$div.resizable({
        ////    stop: function () {

        ////    }
        ////});

    }

</script>

</head>
<body>

    <br />
    <br />
    <br />
