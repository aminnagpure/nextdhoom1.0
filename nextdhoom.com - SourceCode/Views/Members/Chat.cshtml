    <div id="divContainer" align="left">
        <div id="divLogin" class="login">
            <div>

                <input id="txtNickName" type="hidden" class="textBox" value="@Request.Cookies["fname"].Value @Request.Cookies["lname"].Value" />
            </div>

            <input id="btnStartChat" type="button" class="submitButton" value="Start Chat" />

        </div>

        <div id="divChat" class="chatRoom">
            <div class="title">
                Welcome to Chat Room @Request.Cookies["fname"].Value

            </div>
            <div class="content">
                <div id="divChatWindow" class="chatWindow">
                </div>
                <div id="divusers" class="users">
                </div>
            </div>
            <div class="messageBar">
                <input class="textbox" type="text" id="txtMessage" />
                <input id="btnSendMsg" type="button" value="Send" class="submitButton" />
            </div>
        </div>

        <input id="hdId" type="hidden" value="@Request.Cookies["memsid"].Value" />
        <input id="hdUserName" type="hidden" value="@Request.Cookies["fname"].Value @Request.Cookies["lname"].Value" />
        <input id="profileid" type="hidden" value="@Request.Cookies["memsid"].Value" />
        <input id="gimage" type="hidden" value="@Request.Cookies["gmailimage"].Value" />
    </div>

</body>

